# Django Settings
SECRET_KEY=your-production-secret-key-here
DEBUG=False
ALLOWED_HOSTS=caixadigital.com.br,www.caixadigital.com.br

# Database
DB_NAME=caixadigital_prod
DB_USER=caixadigital_user
DB_PASSWORD=strong-database-password
DB_HOST=db
DB_PORT=5432

# Redis
REDIS_URL=redis://:your-redis-password@redis:6379
REDIS_PASSWORD=your-redis-password

# Celery
CELERY_BROKER_URL=redis://:your-redis-password@redis:6379
CELERY_RESULT_BACKEND=redis://:your-redis-password@redis:6379

# Email Settings (Production)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_USE_SSL=False
EMAIL_HOST_USER=apikey
EMAIL_HOST_PASSWORD=your-sendgrid-api-key
DEFAULT_FROM_EMAIL=noreply@caixadigital.com.br
SUPPORT_EMAIL=suporte@caixadigital.com.br

# OpenAI
OPENAI_API_KEY=your-openai-api-key

# Pluggy (Open Banking - Legacy)
PLUGGY_CLIENT_ID=your-pluggy-production-id
PLUGGY_CLIENT_SECRET=your-pluggy-production-secret

# Stripe (Payments)
STRIPE_PUBLISHABLE_KEY=your-stripe-production-publishable-key
STRIPE_SECRET_KEY=your-stripe-production-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-production-webhook-secret

# MercadoPago (Payments)
MERCADOPAGO_PUBLIC_KEY=your-mercadopago-production-public-key
MERCADOPAGO_ACCESS_TOKEN=your-mercadopago-production-access-token

# AWS S3
USE_S3=True
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=caixadigital-static
AWS_S3_REGION_NAME=sa-east-1
AWS_S3_CUSTOM_DOMAIN=static.caixadigital.com.br
AWS_DEFAULT_ACL=public-read
AWS_S3_OBJECT_PARAMETERS={'CacheControl': 'max-age=86400'}

# Sentry (Error Tracking)
SENTRY_DSN=your-sentry-dsn

# Security
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# CORS
CORS_ALLOWED_ORIGINS=https://caixadigital.com.br,https://www.caixadigital.com.br

# Frontend URL
FRONTEND_URL=https://caixadigital.com.br

# Domain
DOMAIN=caixadigital.com.br

# Site Configuration
SITE_NAME=Caixa Digital
LANGUAGE_CODE=pt-br
TIME_ZONE=America/Sao_Paulo